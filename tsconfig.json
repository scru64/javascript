{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "es2018", "es2020.bigint"],
    "module": "node16",
    "moduleResolution": "node16",
    "typeRoots": [],
    "declaration": true,
    "outDir": "./dist/",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
